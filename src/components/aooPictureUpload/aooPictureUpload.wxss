/* component/multiPicturesUpload/multiPicturesUpload.wxss */

.componentContainer {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.imageContainer {
  position: relative;
  padding: 25rpx;
}

.imageContainer .Image {
  width: 100%;
  height: 100%;
}

.imageContainer .closeIcon {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
  z-index: 10;
}

.percentMask {
  background: #000;
  color: white;
  font-size: 42rpx;
  font-weight: bold;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  position: absolute;
   z-index: 5;
}
